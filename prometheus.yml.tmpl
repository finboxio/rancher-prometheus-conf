global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'exporter-metrics'

scrape_configs:
  - job_name: 'ContainerMetrics'
    static_configs:
    {{- with service "ranch-eye" }}
    {{- range .Containers }}
    {{- if eq .State "running" }}
      - targets:
        - {{ .Address }}:9104
        labels:
          instance: {{ .Host.Name }}
    {{- end }}
    {{- end }}
    {{- end }}

  - job_name: 'HostsMetrics'
    static_configs:
    {{- with service "node-exporter" }}
    {{- range .Containers }}
    {{- if eq .State "running" }}
      - targets:
        - {{ .Address }}:9100
        labels:
          instance: {{ .Host.Name }}
    {{- end }}
    {{- end }}
    {{- end }}

  - job_name: 'rancher-api'
    dns_sd_configs:
    - names:
      - 'prometheus-rancher-exporter'
      refresh_interval: 15s
      type: A
      port: 9010

  - job_name: 'Prometheus'
    static_configs:
      - targets:
        - '127.0.0.1:9090'
